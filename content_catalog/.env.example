# Content Catalog - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED FOR PRODUCTION
# =============================================================================

# Flask environment (development, testing, production)
FLASK_ENV=production

# Secret keys - MUST be unique random strings in production
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-this
JWT_SECRET_KEY=your-jwt-secret-key-change-this

# Database URL (Railway provides this automatically for PostgreSQL)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/content_catalog

# Base URL of this application (for email links, etc.)
BASE_URL=https://your-app.railway.app

# CMS endpoint URL
CMS_ENDPOINT=https://your-cms.railway.app

# =============================================================================
# OPTIONAL - DEFAULTS PROVIDED
# =============================================================================

# Server configuration
CONTENT_CATALOG_HOST=0.0.0.0
CONTENT_CATALOG_PORT=5003

# File upload paths (use cloud storage in production)
CONTENT_CATALOG_UPLOAD_PATH=/app/uploads
CONTENT_CATALOG_THUMBNAILS_PATH=/app/uploads/thumbnails

# JWT token expiration (in seconds)
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# User management
INVITATION_EXPIRY_DAYS=7
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Test data seeding (set to 'false' in production)
SEED_TEST_DATA=false

# =============================================================================
# EMAIL CONFIGURATION (Required for invitations and notifications)
# =============================================================================

MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@skillzmedia.com

# =============================================================================
# AWS S3 CONFIGURATION (Optional - for cloud file storage)
# =============================================================================

# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
